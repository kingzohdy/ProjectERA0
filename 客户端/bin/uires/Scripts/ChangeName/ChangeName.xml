	<Frame name="ChangeRoleNameFrame" frameStrata="FULLSCREEN" parent="UIClient" hidden="true" movable = "true" framelevel = "21">
		<Size>
			<AbsDimension x="357" y="127" />
		</Size>
		<Anchors>
