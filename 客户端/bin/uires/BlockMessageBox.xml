<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Ui>
	<Script file="uires/BlockMessageBox.lua" />
	
	<Frame name="BlockMessageBoxTemplate" virtual="true" frameStrata="FULLSCREEN" parent="UIClient" hidden="true" framelevel="999" toplevel="false">
		<Size>
			<AbsDimension x="357" y="127" />
		</Size>
		<Anchors>
			<Anchor point="center">
				<Offset>
					<AbsDimension x="0" y="0" />
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentBackground" inherits="MainBkgTemplate" />
				##界面标题
				<FontString name="$parentTitle" fonttype="TeenyFZYBlackFont" justifyH="center" text="" >
					<Color r="255" g="254" b="189"/>
					 <Size>
						<AbsDimension x="160" y="17" />
					</Size>
					<Anchors>
						<Anchor point="top" relativeTo="$parent" relativePoint="top">
							<Offset>
								<AbsDimension x="0" y="5" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<Texture name="$parentLine" inherits="HorizonalLineTemplate">
					<Size>
						<AbsDimension x="351" y="10" />
					</Size>
					<Anchors>
						<Anchor point="bottom" relativeTo="$parent" relativePoint="bottom">
							<Offset>
								<AbsDimension x="0" y="-28" />
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<RichText name="$parentText" fonttype="TeenyFZYBlackFont" lineInterval ="2" multiLine="true">
				<Size>
					<AbsDimension x="320" y="35" />
				</Size>
				<Anchors>
					<Anchor point="center" relativeTo="$parent" relativePoint="center">
						<Offset>
							<AbsDimension x="0" y="0" />
						</Offset>
					</Anchor>
				</Anchors>
			</RichText>
			<Button name="$parentEnter" inherits="GongYongAnNiuC1ButtonTemplate" text="确定">
				<Size>
					<AbsDimension x="67" y="27" />
				</Size>
				<Anchors>
					<Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parent">
						<Offset>
							<AbsDimension x="15" y="-7" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>BlockMessageBox_OnEnter()</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentCancel" inherits="GongYongAnNiuC1ButtonTemplate" text="取消">
				<Size>
					<AbsDimension x="67" y="27" />
				</Size>
				<Anchors>
					<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
						<Offset>
							<AbsDimension x="-15"  y="-7" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>util.closeParent(this)</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>BlockMessageBox_OnLoad()</OnLoad>
			<OnShow>BlockMessageBox_OnShow()</OnShow>
			<OnHide>BlockMessageBox_OnHide()</OnHide>
			<OnUpdate>BlockMessageBox_OnUpdate()</OnUpdate>
		</Scripts>
	</Frame>
	
	<Frame name="BlockMessageBox" inherits="BlockMessageBoxTemplate" frameStrata="FULLSCREEN" movable="true" parent="UIClient" />
</Ui>