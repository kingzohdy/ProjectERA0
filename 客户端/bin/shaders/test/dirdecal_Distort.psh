#include "header.fx"

sampler s_DiffuseSampler : register(s0);

#if MASK_TEXTURE==1
sampler s_MaskSampler : register(s1);
#endif

struct VS_OUTPUT
{
    float4 pos      : POSITION;
    float4 color0   : COLOR0;
    float4 uv0      : TEXCOORD0;
};

float4 PSMain(VS_OUTPUT	input):COLOR0
{
	float4 color = tex2D(s_DiffuseSampler, input.uv0.xy);
	color *= input.color0;
	return color;
}
