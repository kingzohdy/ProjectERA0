include ../../mmog.mk

APP_NAME=zone_svr

APP_CFILE=$(wildcard *.c)
APP_OBJ=$(APP_CFILE:.c=.o)
ZONE_INC=$(MMOG_INC) -I$(GAME_COMM_INC)/apps/ -I../../comm

ZONE_CFLAGS = $(CFLAGS) $(ZONE_INC)
ZONE_LIB = $(LDPATH) ./libmove.a  $(MMOG_LIB)/libdirty.a $(MMOG_LIB)/libtdirty.a  $(MMOG_LIB)/libptgen.a $(MMOG_LIB)/libnet_cs.a $(MMOG_LIB)/libmycomm.a $(MMOG_LIB)/librsa.a $(GAME_COMM_LIB)/libcrypto.a  $(MMOG_LIB)/libresloader.a   $(GAME_COMM_LIB)/libtormprotocolapi.a $(MMOG_LIB)/libscript.a  $(MMOG_LIB)/libmap.a $(GAME_COMM_LIB)/libgamecomm.a   \
   -Wl,-Bstatic -lscew -lexpat -lgd -lfreetype -lm -Wl,-Bdynamic -lmysqlclient -ldl

.PHONY: all clean 

all: $(APP_NAME) make_err

-include $(APP_CFILE:.c=.d)

%.d: %.c
	$(CC) -MM $(ZONE_CFLAGS) $< -o $@

%.o: %.c %.d
	$(CC) -c $(ZONE_CFLAGS) $(DEBUG) $<
	
$(APP_NAME): $(APP_OBJ)
	$(CC) -o $(APP_NAME) $(ZONE_CFLAGS)  $^ $(ZONE_LIB) -lpthread

make_err:
	./makemmogerr

clean:
	$(RM) *.o  *.d
	$(RM) $(APP_NAME)
	

